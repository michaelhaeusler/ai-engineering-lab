# Makefile for InsuranceLens Backend
# Usage: make <target>

.PHONY: help install check format test mypy lint all clean

# Default target
help:
	@echo "Available targets:"
	@echo "  make check      - Run all checks (mypy, ruff)"
	@echo "  make mypy       - Run type checking with mypy"
	@echo "  make lint       - Run linting with ruff"
	@echo "  make format     - Format code with ruff"
	@echo "  make test       - Run tests with pytest"
	@echo "  make all        - Run format + check + test"
	@echo "  make clean      - Remove cache files"
	@echo "  make dev        - Start development server"

# Run type checking with mypy
mypy:
	@echo "ðŸ” Running mypy type checker..."
	uv run mypy app/

# Run linting with ruff
lint:
	@echo "ðŸ” Running ruff linter..."
	uv run ruff check app/

# Format code with ruff
format:
	@echo "âœ¨ Formatting code with ruff..."
	uv run ruff format app/
	uv run ruff check --fix app/

# Run tests
test:
	@echo "ðŸ§ª Running tests..."
	uv run pytest

# Run all checks
check: mypy lint
	@echo "âœ… All checks passed!"

# Run format + check
all: format check test
	@echo "ðŸŽ‰ All tasks completed!"

# Clean cache files
clean:
	@echo "ðŸ§¹ Cleaning cache files..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".pytest_cache" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".mypy_cache" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".ruff_cache" -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete 2>/dev/null || true
	@echo "âœ… Cache cleaned!"

# Start development server
dev:
	@echo "ðŸš€ Starting development server..."
	uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000

