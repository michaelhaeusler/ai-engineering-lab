{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/backend/(.*)",
      "destination": "api/app.py"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "MAX_PDF_MB": "4.5",
    "NEXT_PUBLIC_MAX_PDF_MB": "4.5"
  }
}